<launch>
  <arg name="input_laserscan_topic" default="/scan"/>
  <arg name="input_base_frame_name" default="base_stabilizad"/>
  <arg name="input_odom_frame_name" default="nav"/>

  <!-- Hector vo -->
  <include file="$(find slam_hec)/launch/mapping.launch">
    <arg name="tf_map_scanmatch_transform_frame_name" value="scanmatcher_frame"/>
    <arg name="base_frame"                            value="$(arg input_base_frame_name)"/>
    <arg name="odom_frame"                            value="$(arg input_odom_frame_name)"/>
    <arg name="pub_map_odom_transform"                value="true"/>
    <arg name="scan_subscriber_queue_size"            value="10"/>
    <arg name="scan_topic"                            value="$(arg input_laserscan_topic)"/>
    <arg name="map_size"                              value="2048"/>
  </include>

  <include file="$(find hector_geotiff)/launch/geotiff_mapper.launch">
    <arg name="trajectory_source_frame_name" value="scanmatcher_frame"/>
    <arg name="map_file_path" value="$(find slam_hec)/maps"/> 
  </include>

  <!-- Start rviz visualization with preset config -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find slam_hec)/launch/hector_slam.rviz"/>
</launch>
