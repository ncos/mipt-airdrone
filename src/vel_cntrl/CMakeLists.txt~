cmake_minimum_required(VERSION 2.8.3)

#SET( CMAKE_CXX_FLAGS_RELEASE "${CMAKE_CXX_FLAGS_RELEASE} -Wcpp" )
#SET( CMAKE_C_FLAGS_RELEASE   "${CMAKE_C_FLAGS_RELEASE} -Wcpp" ) #Флаги компилятора
SET(COMPILE_FLAGS "-Wno-deprecated")   #Флаги компилятора
add_definitions(${COMPILE_FLAGS})

project(vel_cntrl)



find_package(catkin REQUIRED COMPONENTS 
				geometry_msgs 
				message_generation 
				roscpp 
				sensor_msgs
				visualization_msgs 
				std_msgs)

find_package(OpenCV REQUIRED)
catkin_package()

###########
## Build ##
###########


include_directories(	${catkin_INCLUDE_DIRS}
			${VTK_INCLUDE_DIRS} )


set(VTK_LIBS 	libvtkCommon.so 
		libvtkFiltering.so 
		libvtkRendering.so 
		libvtkGraphics.so	)



set(SOURCES main.cpp)	  # Установка переменной со списком исходников

add_executable(vel_cntrl_node ${SOURCES})
target_link_libraries(vel_cntrl_node 	${catkin_LIBRARIES})

















